{
  "name": "apprun-site",
  "version": "0.7.0",
  "description": "AppRun Site is a framework for building AppRun applications.",
  "main": "dist/index.js",
  "bin": "apprun-site-cli.js",
  "scripts": {
    "test": "jest --watch",
    "start": "run-p start:*",
    "start:pages": "node apprun-site-cli build demo -w",
    "start:dev": "webpack serve --mode development",
    "build": "run-s build:*",
    "build:pages": "node apprun-site-cli build demo",
    "build:js": "webpack -p --mode production",
    "build:esm": "run-s build:esm:*",
    "build:esm:ts": "tsc -p src",
    "build:esm:fix": "node apprun-site-cli fix-esm --source esm"
  },
  "keywords": [
    "AppRun",
    "AppRun Site",
    "Application Framework"
  ],
  "author": "Yiyi Sun <yiyisun@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yysun/apprun-site.git"
  },
  "bugs": {
    "url": "https://github.com/yysun/apprun-site/issues"
  },
  "homepage": "https://github.com/yysun/apprun-site#readme",
  "dependencies": {
    "acorn": "^8.7.0",
    "apprun": "^3.28.9",
    "chalk": "4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^9.1.0",
    "degit": "^2.8.4",
    "esbuild": "^0.14.27",
    "esm": "^3.2.25",
    "estree-walker": "^2.0.2",
    "js-yaml": "^4.1.0",
    "jsonfile": "^6.1.0",
    "magic-string": "^0.26.1",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-front-matter": "^0.2.3",
    "markdown-it-table-of-contents": "^0.6.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}

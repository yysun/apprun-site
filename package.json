{
  "name": "apprun-site",
  "version": "1.0.0",
  "description": "AppRun Static Site",
  "main": "server.js",
  "scripts": {
    "test": "jest --watch",
    "start": "run-p server \"build:* -- -w\"",
    "server": "node server.js",
    "build": "npm-p build:*",
    "build:pages": "node src/_site/build-pages",
    "build:ts": "tsc -p .",
    "build:rollup": "rollup -c"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "jest": "^24.8.0",
    "live-server": "^1.2.1",
    "markdown-it": "^8.4.2",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.12.3",
    "rollup-plugin-filesize": "^6.1.0",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-unpkg": "0.0.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "apprun": "^2.20.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}

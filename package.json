{
  "name": "apprun-site",
  "version": "0.7.0",
  "description": "AppRun Site is a framework for building AppRun applications.",
  "main": "dist/index.js",
  "bin": "apprun-site-cli.js",
  "scripts": {
    "test": "jest --watch",
    "start": "run-p start:*",
    "start:dev": "webpack-dev-server --mode development",
    "start:pages": "node apprun-site-cli build --target docs --root '#' -w -V",
    "build": "run-s build:*",
    "build:pages": "node apprun-site-cli build --target docs --root '#'",
    "build:js": "webpack -p --mode production",
    "build:esm": "run-s build:esm:*",
    "build:esm:ts": "tsc -p src",
    "build:esm:fix": "node apprun-site-cli fix-esm --source esm"
  },
  "keywords": [
    "AppRun",
    "AppRun Site",
    "Application Framework"
  ],
  "author": "Yiyi Sun <yiyisun@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yysun/apprun-site.git"
  },
  "bugs": {
    "url": "https://github.com/yysun/apprun-site/issues"
  },
  "homepage": "https://github.com/yysun/apprun-site#readme",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.2",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },
  "dependencies": {
    "acorn": "^7.1.0",
    "apprun": "^2.22.1",
    "cac": "^6.5.3",
    "chalk": "^2.4.2",
    "chokidar": "^3.3.0",
    "degit": "^2.2.2",
    "estree-walker": "^0.9.0",
    "fs-extra": "^8.1.0",
    "magic-string": "^0.25.4",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.5",
    "markdown-it-table-of-contents": "^0.4.4",
    "read-pkg": "^5.2.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}

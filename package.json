{
  "name": "apprun-site",
  "version": "0.2.1",
  "description": "AppRun Static Site Tool",
  "main": "dist/index.js",
  "module": "dist/es6/index.js",
  "bin": "apprun-site-cli.js",
  "scripts": {
    "test": "jest --watch",
    "start": "run-s build:pages start:dev",
    "start:dev": "webpack-dev-server --mode development",
    "build:pages": "node apprun-site-cli build --target docs",
    "build": "run-s build:*",
    "build:ts": "tsc -d -p src/_site",
    "build:js": "webpack -p --mode production",
    "cli": "node apprun-site-cli"
  },
  "keywords": [
    "AppRun",
    "Static Site"
  ],
  "author": "Yiyi Sun",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.0.1",
    "typescript": "^3.5.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "dependencies": {
    "apprun": "^2.20.3",
    "cac": "^6.5.1",
    "degit": "^2.1.3",
    "del": "^4.1.1",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.2.3",
    "markdown-it-table-of-contents": "^0.4.4",
    "markdown-it-v": "^1.2.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}

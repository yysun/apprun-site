{
  "name": "apprun-site",
  "version": "0.7.0",
  "description": "AppRun Site is a framework for building AppRun applications.",
  "main": "dist/index.js",
  "bin": "apprun-site-cli.js",
  "scripts": {
    "test": "jest --watch",
    "start": "run-p start:*",
    "start:pages": "node apprun-site-cli build --target docs --root '#' -w -V",
    "start:dev": "webpack serve --mode development",
    "build": "run-s build:*",
    "build:pages": "node apprun-site-cli build --target docs --root '#'",
    "build:js": "webpack -p --mode production",
    "build:esm": "run-s build:esm:*",
    "build:esm:ts": "tsc -p src",
    "build:esm:fix": "node apprun-site-cli fix-esm --source esm"
  },
  "keywords": [
    "AppRun",
    "AppRun Site",
    "Application Framework"
  ],
  "author": "Yiyi Sun <yiyisun@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yysun/apprun-site.git"
  },
  "bugs": {
    "url": "https://github.com/yysun/apprun-site/issues"
  },
  "homepage": "https://github.com/yysun/apprun-site#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "source-map-loader": "^3.0.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "acorn": "^8.3.0",
    "apprun": "^3.28.6",
    "chalk": "^4.1.1",
    "chokidar": "^3.5.1",
    "commander": "^7.2.0",
    "degit": "^2.8.4",
    "esbuild": "^0.12.5",
    "estree-walker": "^3.0.0",
    "fs-extra": "^10.0.0",
    "js-yaml": "^3.14.1",
    "magic-string": "^0.25.7",
    "markdown-it": "^12.0.6",
    "markdown-it-anchor": "^7.1.0",
    "markdown-it-front-matter": "^0.2.3",
    "markdown-it-table-of-contents": "^0.5.2",
    "read-pkg": "^6.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}

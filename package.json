{
  "name": "apprun-site",
  "version": "0.4.1",
  "description": "AppRun Static Site Tool",
  "main": "dist/index.js",
  "module": "docs/esm/_site/index-esm.js",
  "bin": "apprun-site-cli.js",
  "scripts": {
    "test": "jest --watch",
    "start": "run-p start:*",
    "start:dev": "webpack-dev-server --mode development",
    "start:pages": "node apprun-site-cli build --target docs -w -V",
    "build": "run-s build:*",
    "build:pages": "node apprun-site-cli build --target docs",
    "build:js": "webpack -p --mode production",
    "-build:esm": "run-s build:esm:*",
    "-build:esm:ts": "tsc -d -p src",
    "-build:esm:fix": "node apprun-site-cli fix-esm --source docs/esm"
  },
  "keywords": [
    "AppRun",
    "Application Framework"
  ],
  "author": "Yiyi Sun",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.0.1",
    "typescript": "^3.5.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "dependencies": {
    "acorn": "^6.1.1",
    "apprun": "^2.20.3",
    "cac": "^6.5.1",
    "chalk": "^2.4.2",
    "chokidar": "^3.0.0",
    "degit": "^2.1.3",
    "estree-walker": "^0.6.1",
    "fs-extra": "^8.0.1",
    "magic-string": "^0.25.2",
    "markdown-it": "^8.4.2",
    "markdown-it-anchor": "^5.2.3",
    "markdown-it-table-of-contents": "^0.4.4",
    "markdown-it-v": "^1.2.0",
    "read-pkg": "^5.1.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}

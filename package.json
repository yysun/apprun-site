{
  "name": "apprun-site",
  "version": "1.0.5",
  "description": "AppRun Site is a framework for building AppRun applications.",
  "main": "dist/index.js",
  "bin": "apprun-site-cli.js",
  "scripts": {
    "test": "",
    "start": "apprun-dev-server --entry-file=404.html demo/public",
    "static": "http-server demo/public -c-1",
    "dev": "node apprun-site-cli build demo --watch",
    "build": "NODE_ENV=production node apprun-site-cli build demo"
  },
  "keywords": [
    "AppRun",
    "AppRun Site",
    "Application Framework"
  ],
  "author": "Yiyi Sun <yiyisun@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yysun/apprun-site.git"
  },
  "bugs": {
    "url": "https://github.com/yysun/apprun-site/issues"
  },
  "homepage": "https://github.com/yysun/apprun-site#readme",
  "dependencies": {
    "apprun": "^3.28.10",
    "apprun-dev-server": "^1.3.4",
    "chalk": "4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^9.1.0",
    "degit": "^2.8.4",
    "esbuild": "^0.14.27",
    "js-yaml": "^4.1.0",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-front-matter": "^0.2.3",
    "markdown-it-table-of-contents": "^0.6.0",
    "puppeteer": "^13.5.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}

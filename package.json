{
  "name": "apprun-site",
  "version": "1.0.0",
  "description": "AppRun Static Site",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch",
    "start": "serve --single public",
    "build": "tsc -p . -w & rollup -c -w",
    "build:pages": "node src/_site/build-pages"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "jest": "^24.8.0",
    "markdown-it": "^8.4.2",
    "rollup": "^1.12.3",
    "rollup-plugin-filesize": "^6.1.0",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-unpkg": "0.0.3",
    "serve": "^10.1.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "apprun": "^2.20.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  }
}
